<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffebd6"
    android:orientation="vertical"
    tools:context=".CreatePlanActivity">
<!--    #ffd9b3 = previous background color-->

    <ScrollView
        android:id="@+id/create_plan_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/create_plan_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Create New Plan"
                android:textColor="@color/black"
                android:textSize="40dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/err_msg_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="40dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:textColor="@color/red_error"
                />


<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->

<!--                android:orientation="horizontal">-->

<!--                <TextView-->
<!--                    android:id="@+id/textView4"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginLeft="10dp"-->
<!--                    android:layout_weight="1"-->
<!--                    android:text="Plan Name"-->
<!--                    android:textSize="24dp" />-->

                <EditText
                    android:id="@+id/plan_title_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:layout_weight="1"
                    android:background="@color/input"
                    android:ems="7"
                    android:hint="Enter plan name"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textSize="24dp" />

<!--            </LinearLayout>-->
            <TextView
                android:id="@+id/err_msg_ex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="35dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:textColor="@color/red_error"
                />
        <LinearLayout
            android:id="@+id/plan_exercises_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ex1:"
                    android:textSize="24dp"

                    android:layout_marginLeft="10dp"/>

                <EditText
                    android:id="@+id/ex1_name_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="8"
                    android:textSize="24dp"
                    android:inputType="textPersonName"
                    android:background="@color/input"
                    android:padding="5dp"
                    android:layout_marginEnd="40dp"
                    android:hint="1st exercise name" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ex2:"
                    android:textSize="24dp"
                    android:layout_marginLeft="10dp"/>

                <EditText
                    android:id="@+id/ex2_name_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="8"
                    android:textSize="24dp"
                    android:inputType="textPersonName"
                    android:background="#e7e9eb"
                    android:padding="5dp"
                    android:layout_marginEnd="40dp"
                    android:hint="2nd exercise name" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ex3:"
                    android:textSize="24dp"
                    android:layout_marginLeft="10dp"/>

                <EditText
                    android:id="@+id/ex3_name_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="8"
                    android:textSize="24dp"
                    android:inputType="textPersonName"
                    android:background="#e7e9eb"
                    android:padding="5dp"
                    android:layout_marginEnd="40dp"
                    android:hint="3rd exercise name" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ex4:"
                    android:textSize="24dp"
                    android:layout_marginLeft="10dp"/>

                <EditText
                    android:id="@+id/ex4_name_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="8"
                    android:textSize="24dp"
                    android:inputType="textPersonName"
                    android:background="#e7e9eb"
                    android:padding="5dp"
                    android:layout_marginEnd="40dp"
                    android:hint="4th exercise name" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ex5:"
                    android:textSize="24dp"
                    android:layout_marginLeft="10dp"/>

                <EditText
                    android:id="@+id/ex5_name_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="8"
                    android:textSize="24dp"
                    android:inputType="textPersonName"
                    android:background="#e7e9eb"
                    android:padding="5dp"
                    android:layout_marginEnd="40dp"
                    android:hint="5th exercise name" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ex6:"
                    android:textSize="24dp"
                    android:layout_marginLeft="10dp"/>

                <EditText
                    android:id="@+id/ex6_name_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="8"
                    android:textSize="24dp"
                    android:inputType="textPersonName"
                    android:background="#e7e9eb"
                    android:padding="5dp"
                    android:layout_marginEnd="40dp"
                    android:hint="6th exercise name" />
            </LinearLayout>
        </LinearLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_ex_btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Add Exercise"
                android:textSize="20dp"
                android:backgroundTint="@color/teal_700"
                android:textColor="@color/black"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/generate_plan_btn"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Generate!"
                android:textSize="25dp"
                android:backgroundTint="@color/light_green"
                android:textColor="@color/black"
                android:layout_marginBottom="15dp"
                />


        </LinearLayout>
    </ScrollView>





</LinearLayout>